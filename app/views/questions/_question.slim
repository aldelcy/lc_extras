.question class="#{'answered' if q.answers.size>0}" data-quest="#{q.id}"
    h5 = q.title
    hr
    = q.desc
    br
    a.left style="color:red;" href="#{question_path(q.id)}" data-remote="true" data-toggle="modal" data-target="#exampleModalLong" Answer 
    .right Answers: #{q.answers.size}

    a href="#{question_path(q)}" data-remote="true" data-method="delete" data-confirm="Are you sure?"
        .delete
